# Editor configuration, see https://editorconfig.org

[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
quote_type = single

[*.html]
max_line_length = off

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[package.json]
end_of_line = lf

[package-lock.json]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = false
