{
  "printWidth": 120,
  "tabWidth": 2,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "proseWrap": "preserve",
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "options": {
        "tabWidth": 4,
        "singleQuote": true
      }
    },
    {
      "files": ["*.html", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
